<resources>

    <color name="polygon">#2196F3</color>
    <color name="polygonEdges">#0D47A1</color>
    <color name="textRed">#D50000</color>

    <color name="yellow1">#fff7ff16</color>
    <color name="yellow2">#ffd8e119</color>
    <color name="orange1">#fff0bc20</color>
    <color name="orange2">#ffe6a335</color>
    <color name="grey1">#30000000</color>
    <color name="grey2">#6D8383</color>
    <color name="blue2">#ff134371</color>
    <color name="blue3">#2196F3</color>
    <color name="green1">#008E00</color>
    <color name="green2">#1E541E</color>
    <color name="white2">#FCFCFC</color>
    <color name="white3">#E2E2E2</color>
    <color name="white">#FFFFFF</color>

    <color name="primary">#8BC34A</color>
    <color name="primary_dark">#689F38</color>
    <color name="primary_light">#DCEDC8</color>
    <color name="accent">#FFC107</color>
    <color name="primary_text">#212121</color>
    <color name="secondary_text">#727272</color>
    <color name="icons">#212121</color>
    <color name="divider">#B6B6B6</color>

    <color name="snackBarInfo">#2196F3</color>
    <color name="snackBarSuccess">@color/primary</color>
    <color name="snackBarWarning">@color/accent</color>

    <color name="slidinglayer_background">#ffffff</color>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#3D5AFE</item>
        <item name="colorPrimary">#303F9F</item>
        <item name="colorPrimaryDark">#283593</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat">
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="colorPrimary">#303F9F</item>
        <item name="colorPrimaryDark">#283593</item>
    </style>

    <!-- View photos activity theme -->
    <style name="AppThemeTransparentActionBar" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
    </style>

    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>


    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar.Small" />

    <!-- Styles for SlidingPanel -->
    <style name="Title" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Caption" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/profile_gray</item>
    </style>

    <style name="Subhead" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Body2" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
